.container(style="padding-top: 20px;")
  .row
    .col-md-12.text-center
      h1 Your Team
  .row
    .col-sm-12.text-right
      button.btn.btn-primary.btn-lg(ng-click="openAddEmployeeModal()") Add new employee
  .row
    .col-sm-12
      table.table
        thead
          tr
            th 
              | Employee Name
            th
              | Position/Department
            th.text-center
              | Due Date
  .row
    div.employeeList    
      .list-group
        a.list-group-item(ng-repeat='employee in employees | orderBy: "identification.name.fullName"' ng-click='openEditEmployeeModal(employee)')
          .row
            .col-xs-4
              | {{employee.identification.name.fullName}}
            .col-xs-4
              | {{employee.positions[0].name}}/{{employee.departments[0].name}}
            .col-xs-3.col-md-offset-1.text-center
              | Hire Date? 
