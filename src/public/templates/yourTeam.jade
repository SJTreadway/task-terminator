.container(style="padding-top: 20px;")
  .row
    .col-sm-10.text-center
      h1 Your Team
  .row
    .col-sm-10.text-right(style="padding-bottom: 20px;")
      button.btn.btn-primary.btn-lg(ng-click="openAddEmployeeModal()") Add new employee
  .row
    .col-sm-10
      .panel.panel-default
        .panel-heading
          h3.panel-title 
            | Panel title
        .panel-body
          .row
            .col-sm-12
              table.table
                thead
                  tr
                    th 
                      | Employee Name
                    th
                      | Position/Department
                    th.text-center
                      | Hire Date
          .row
            div.employeeList(style="padding-top:0;")    
              .list-group
                a.list-group-item(ng-repeat='employee in employees | orderBy: "identification.name.fullName"' ng-click='openEditEmployeeModal(employee)')
                  .row
                    .col-xs-4
                      | {{employee.identification.name.fullName}}
                    .col-xs-4
                      | {{employee.positions[0].name}}/{{employee.departments[0].name}}
                    .col-xs-3.col-sm-offset-1.text-center
                      | Hire Date? 
