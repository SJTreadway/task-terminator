h1(style="padding-left:15px; padding-top: 15px;") Projects
hr
.container
  .row.text-center(style="padding-top: 20px;")
    .col-md-4.text-right
      h3(style="margin-top:5px;") Create New: 
    .col-md-6.text-left
      button.btn.btn-primary(type="button" ng-click="openSingleModal()") Single Instance Project
      button.btn.btn-default(type="button" ng-click="openScheduleModal()") Scheduled Project
      button.btn.btn-default(type="button" ng-click="openTemplateModal()") Create Template
    .col-md-2
  .row
    .col-md-10
      .panel.panel-default
        .panel-heading
          h3.panel-title Panel title
        .panel-body
            .row
              .col-sm-12.text-center
                h2 Active Projects
            .row
              .col-md-3(ng-repeat="project in projects")
                .box-wrapper(style="margin: 25px auto;" ng-click="openModal(project)")
                  .project-thing
                    ul(style="list-style-type:none; padding:5px;")
                      li
                        p <b><i>Project Name:</i></b> {{project.name}}
                        p <b><i>Description:</i></b> {{project.description}}
                        p <b><i>Due Date:</i></b> {{project.setup.dueDate.actual | date:'mediumDate'}}     
  .row
    .col-md-10
      .panel.panel-default
        .panel-heading
          h3.panel-title 
            | Panel title
        .panel-body
          .list-group
            a.list-group-item(ng-repeat='project in projects')
              .row
                .col-xs-4
                  | {{project.name}} 
                .col-xs-4
                  | {{project.description}} 
                .col-xs-3.col-md-offset-1.text-center
                  | {{project.setup.dueDate.actual | date:'mediumDate'}} 
