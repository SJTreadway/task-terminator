h1.text-center
  | Add employee form
div.employeeAddForm
  form 
    .form-group
      label(for="EmployeeFirstNameField")
        | First Name:  
      input.form-control(type="text" ng-model="newEmployee.firstName" id="EmployeeFirstNameField")
    .form-group
      label(for="EmployeeLastNameField")
        | Last Name:  
      input.form-control(type="text" ng-model="newEmployee.lastName" id="EmployeeLastNameField")
    .form-group
      label(for="EmployeeUsernameField")
        | Email:  
      input.form-control(type="email" ng-model="newEmployee.username" id="EmployeeUsernameField")
    .form-group
      label(for="EmployeeEmailField")
        | Email:  
      input.form-control(type="email" ng-model="newEmployee.email" id="EmployeeEmailField")
    .form-group
      label(for="permissionsField")
        | Admin:  
      select.form-control(ng-model="newEmployee.admin" id="permissionsField")
        option(value="true")
          | Yes
        option(value="false")
          | No
    .form-group
      label(for="DepartmentsField")
        | Department:  
    .form-group
      label(for="PositionsField")
        | Position:  
    button.btn.btn-primary.btn-lg(ng-click="addEmployee(newEmployee)")
