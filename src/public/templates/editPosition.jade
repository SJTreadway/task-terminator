h1.text-center
  | Edit Position Form
div.employeeAddForm
  form
    .form-group
      label(for="PositionName")
        | Position Name:  
      input.form-control(type="text" ng-model="position.name" id="PositionName")
    .form-group
      label(for="departmentName")
        | Department Name: {{position.department.name}}
      select.form-control(ng-model="position.department" id="departmentName" ng-options="department._id as department.name for department in company.departments")
    .list-group.employeeList(style="margin-bottom:15px;")
      h3 Employees:
      a.list-group-item(ng-repeat='employee in positionEmployees')
        .row
          .col-xs-4
            | {{employee.identification.name.fullName}}
    button.btn.btn-primary(ng-click="editPosition(position)") Submit Edit
    button.btn.btn-warning(ng-click="cancel()") Close
    button.btn.btn-danger(style="float: right;" ng-click="deletePosition(position)") Remove Position
