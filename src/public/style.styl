color1 = #E8F1F2
color2 = #1b98E0
color3 = #247BA0
color4 = #006494
color5 = #13293D

primary-header-bg-color = #edeff1
primary-bg-color = #D4D6D7
primary-header-color = #4E6071

  /* BASE STYLES
============================================================================= */

html, body {
    background-color: primary-bg-color
    padding-bottom: 20px
}

#wrapper {
    width: 100%
}

#page-wrapper {
    padding: 0 15px
    background-color: color5
}

.page-wrapper .row{
  background-color: color3
}

.container, .container-fluid
  width: 100%

.btn {
  margin:5px;
}


.navbar-brand
  font-family: 'Lobster Two', cursive;
  color: primary-header-color;
  font-size: 24px;

/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.marketing,
.footer {
  padding-left: 15px
  padding-right: 15px
}

/* Make the masthead heading the same height as the navigation */
.header h3 {
  margin-top: 0
  margin-bottom: 0
  line-height: 40px
  padding-bottom: 19px
}

.pageTitle {
  text-align: center;
}

.projectButtons {
  text-align: center;
}
#side-menu {
  height: 900px
  background-color: color5
}

.dashboard-projects
  height: 350px
  overflow-y: scroll
  border: 1px black solid

.dashboard-projects ul li
  list-style-type: none
  border-bottom: 1px black solid


.dashboard-projects ul
  padding: 0

.dashboard-projects hr
  color: black

.dashboard-cards .panel
  border: 1px #a0a0a0 solid
  -webkit-box-shadow: 2px 2px 5px 0px rgba(135,135,135,1)
  -moz-box-shadow: 2px 2px 5px 0px rgba(135,135,135,1)
  box-shadow: 2px 2px 5px 0px rgba(135,135,135,1)

.dashboard-cards .panel .panel-body
  border-radius: 5px 5px 0 0
  background-color: color1

.dashboard-cards .panel .panel-body .row
  background-color: color1

.dashboard-cards .panel .panel-footer
  border-radius: 0 0 5px 5px
  background-color: lightgray

.singleProject
  margin-top: 10px

.dueDate
  border: 1.5px black solid
  width: 33%
  margin: 0 auto

.employeeAddForm
  padding: 40px

.employeeList
  height: 350px
  overflow-y: scroll
  border: .5px black solid
  padding-top: 20px

h1
  color: color5

h2
  color: color5

h3
  color: color5

.cardIcon
  font-size: 70px

.pointer-cursor
  cursor: pointer

.user-dropdown li a
  color: color3

.user-dropdown:hover
  background-color: color1

.dropdown > .dropdown-menu
  background-color: color1

ul p.navbar-text
  color: color3

.navbar
  background-color: primary-header-bg-color

.navbar-text a
  color: primary-header-color

.taskForm
  padding-top: 20px

.taskBox
  border: 1px black solid
  height: 253px


.viewTaskBox
  margin-top: 20px
  border: 1px black solid

.tasksInBox
  border: 1px solid black
  list-style-type: none

.saveTask
  margin: 10px 0

.blueButton
  padding-left: 0
  background-color: color2
  border-color: color2
  border-radius: 15px
  padding-left: 12px
  color: color3

.modalPage
  background-color: rgb(200, 200, 200)
  border-radius: 5px

input[type="text"] {
  display: block;
  margin: 0;
  font-family: sans-serif;
  font-size: 18px;
  appearance: none;
  box-shadow: none;
  border-radius: none;
  background-color: rgb(200, 200, 200)
  border-bottom: solid 2px rgb(91, 91, 91)


}
input[type="text"]:focus {
  outline: none;
}

.style-4 input[type="text"] {
  padding: 10px
  border: none
  border-bottom: solid 2px rgb(91, 91, 91)
  transition: border 0.3s
}
.style-4 input[type="text"]:focus,
.style-4 input[type="text"].focus {
  border-bottom: solid 2px #969696
}

.modal-bottom
  margin: 20px 0

  /* Sidebar Styling
  ============================================================================= */

.sidebar .sidebar-nav.navbar-collapse {
    padding-right: 0
    padding-left: 0
}

