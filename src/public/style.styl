  /* BASE STYLES
============================================================================= */

body {
    background-color: #fff
    padding-bottom: 20px
}

#wrapper {
    width: 100%
}

#page-wrapper {
    padding: 0 15px
    min-height: 568px
    background-color: #eee
}

@media(min-width:768px) {
    #page-wrapper {
        position: inherit
        margin: 0 0 0 250px
        padding: 0 30px
        border-left: 1px solid #e7e7e7
    }
}

.navbar-top-links {
    margin-right: 0
}

.navbar-top-links li {
    display: inline-block
}

/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.marketing,
.footer {
  padding-left: 15px
  padding-right: 15px
}

/* Custom page header */
.header {
  border-bottom: 4px solid #e5e5e5
}

/* Make the masthead heading the same height as the navigation */
.header h3 {
  margin-top: 0
  margin-bottom: 0
  line-height: 40px
  padding-bottom: 19px
}

/* Custom page footer */
.footer {
  padding-top: 19px
  color: #777
  border-top: 1px solid #e5e5e5
}

#side-menu {
  height: 900px
}

.nav>li.active>a {
text-decoration: none
background-color: #eee
}

.dashboard-projects
  height: 350px
  overflow-y: scroll
  border: 1px black solid

.dashboard-projects ul li
  list-style-type: none
  border-bottom: 1px black solid


.dashboard-projects ul
  padding: 0

.dashboard-projects hr
  color: black

.dashboard-cards .panel
  border: 1px #a0a0a0 solid
  -webkit-box-shadow: 2px 2px 5px 0px rgba(135,135,135,1);
  -moz-box-shadow: 2px 2px 5px 0px rgba(135,135,135,1);
  box-shadow: 2px 2px 5px 0px rgba(135,135,135,1);

.dashboard-cards .panel .panel-body
  border-radius: 5px 5px 0 0

.dashboard-cards .panel .panel-footer
  border-radius: 0 0 5px 5px
  background-color: #e5e5e5

.singleProject
  margin-top: 10px

.dueDate
  border: 1.5px black solid
  width: 33%
  margin: 0 auto

.employeeAddForm
  padding: 40px

.employeeList
  height: 350px
  overflow-y: scroll
  border: .5px black solid
  padding-top: 20px

  /* Sidebar Styling
  ============================================================================= */

.sidebar .sidebar-nav.navbar-collapse {
    padding-right: 0
    padding-left: 0
}

.sidebar .sidebar-search {
    padding: 15px
}

.sidebar ul li {
    border-bottom: 1px solid #e7e7e7
    padding-left: 15px
}

.sidebar ul li a.active {
    background-color: #eee
}

.sidebar .arrow {
    float: right
}

.sidebar .nav-second-level li,
.sidebar .nav-third-level li {
    border-bottom: 0!important
}

.sidebar .nav-second-level li a {
    padding-left: 20px
}

.sidebar .nav-third-level li a {
    padding-left: 35px
}

@media(min-width:768px) {
  .sidebar {
      z-index: 0
      position: absolute
      width: 250px
      margin-top: 0px
  }
}




  /* BASE STYLES
============================================================================= */
.page
	bottom:50
	position:absolute
	top:50
	width:100%

/* ANIMATIONS
============================================================================= */

.page.ng-leave
  z-index:9999
.page.ng-enter
  z-index:8888

/* page specific animations ------------------------ */

/* Dashboard ------------------------ */
.page-dashboard.ng-leave
  -webkit-animation:slideOutLeft 0.4s both ease-in
	-moz-animation:slideOutLeft 0.4s both ease-in
	animation:slideOutLeft 0.4s both ease-in

.page-dashboard.ng-enter
  -webkit-animation:slideInRight 0.4s both ease-in
	-moz-animation:slideInRight 0.4s both ease-in
	animation:slideInRight 0.4s both ease-in

/* Projects ------------------------ */
.page-projects.ng-leave
  -webkit-animation:slideOutLeft 0.4s both ease-in
	-moz-animation:slideOutLeft 0.4s both ease-in
	animation:slideOutLeft 0.4s both ease-in

.page-projects.ng-enter
  -webkit-animation:slideInRight 0.4s both ease-in
	-moz-animation:slideInRight 0.4s both ease-in
	animation:slideInRight 0.4s both ease-in

/* Your Team ------------------------ */
.page-yourTeam.ng-leave
  -webkit-animation:slideOutLeft 0.4s both ease-in
	-moz-animation:slideOutLeft 0.4s both ease-in
	animation:slideOutLeft 0.4s both ease-in

.page-yourTeam.ng-enter
  -webkit-animation:slideInRight 0.4s both ease-in
	-moz-animation:slideInRight 0.4s both ease-in
	animation:slideInRight 0.4s both ease-in


/* slide in from the right */
@keyframes slideInRight
	from{
    transform:translateX(100%)
  }
	to{
    transform: translateX(0)
  }


@-moz-keyframes slideInRight
  	from{
      -moz-transform:translateX(100%)
    }
  	to{
       -moz-transform: translateX(0)
    }

@-webkit-keyframes slideInRight
  	from{
      -webkit-transform:translateX(100%)
    }
  	to{
       -webkit-transform: translateX(0)
    }


/* slide out to the left */
@keyframes slideOutLeft
	to{
     transform: translateX(-100%)
  }

@-moz-keyframes slideOutLeft
	to{
     -moz-transform: translateX(-100%)
  }

@-webkit-keyframes slideOutLeft
	to{
     -webkit-transform: translateX(-100%)
  }
