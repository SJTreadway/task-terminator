.sidebar {
  background: color5
}

.sidebar ul li {
    border-bottom: 1px color3 solid
    padding-left: 15px
    background-color: color4
}

.sidebar ul li a:hover {
  background-color: rgb(141, 141, 141)
}

.sidebar ul li a:visited {
    background-color: rgb(141, 141, 141)
}

.positionList
  height: 350px
  overflow-y: scroll


.row .col-sm-12 div.panel
  background-color: color4

.project-thing ul li
  border: 1px color1 solid
  padding: 5px


#side-menu li
  padding: 0
